$(".header-search input[type='button']").val("►");


$('#invoice-search-id').keyup(function() {
 var val = $(this).val();
 if($(this).val().length>0) {
 $(".header-search input[type='button']").show();
 $(".header-logo").css('opacity',0.2);
 }
 else {
 $(".header-search input[type='button']").hide();
 $(".header-logo").css('opacity',1);
 }
 
 var slen = $(this).val().length;

 if(slen>=30) $(this).addClass('micro').removeClass('mini'); 
 if(slen>=16 && slen<30) $(this).addClass('mini').removeClass('micro'); 
 if(slen<16) $(this).removeClass('mini').removeClass('micro');

 val = val.replace(/\./g,",");
 $(this).val(val);
 });

</script>
